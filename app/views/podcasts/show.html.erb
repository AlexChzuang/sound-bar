<%= link_to "返回節目列表", podcasts_path %>
<br>
<h1><%= @podcast.name %></h1>

<p>
  <strong>Cover:</strong>
  <%= image_tag(@podcast.cover.url) if @podcast.cover? %>
</p>

<ul>
  <li>創作者名稱：<%= @podcast.artist %></li>
  <li>類別：<%= @podcast.genres %></li>
  <li>語言：<%= @podcast.language %></li>
  <li>描述：<%= @podcast.description %></li>
</ul>
<br>
<%= link_to "新增單集", new_podcast_episode_path(@podcast) %>

<table class="table">
  <thead>
    <tr>
      <th>
      <th>標題</th>
      <th>發布日期</th>
      <th>連結</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td>S<%= episode.season %>E<%= episode.episode %></td>
        <td><%= episode.title %></td>
        <td><%= episode.created_at %></td>
        <td><%= link_to "連結", podcast_episode_path(@podcast, episode) %></td>
        <td><%= link_to "編輯", edit_podcast_episode_path(@podcast, episode) %></td>
        <td><%= link_to "刪除", podcast_episode_path(@podcast, episode), method: "delete", data: {confirm: "是否確認刪除？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>