<div class="grid md:flex">
  <div class="my-auto md:w-9/12">
    <div class="donate_bg md:h-screen grid justify-center items-center">
      <div class="grid">
        <span class="donate_cover"><%= image_tag(@podcast.cover.url, size: "250x250") if @podcast.cover? %></span>
        <p class="donate_podcast"><%= @podcast.name %></p>
        <p class="donate_artist"><%= @podcast.artist %></p>
      </div>
    </div>
  </div>
  <div class="w-auto md:w-3/12">
    <div class="flex flex-col justify-between w-full h-full">
      <div>
        <%= simple_form_for @donation, url:  donate_player_podcast_path(@podcast.random_url)  do |f| %>
        <div class="pt-3 pr-5 pl-5">
          <%= f.input :amount, label: "一次性贊助", input_html: { class: "donate_form" } %>
        </div>
        <div class="pt-3 pr-5 pl-5">
          <%= f.input :donator, label: "名稱", placeholder: "未填寫則顯示「匿名贊助者」", input_html: { class: "donate_form" } %>
        </div>
        <div class="pt-3 pr-5 pl-5">
          <%= f.input :note, label: "留一段話鼓勵我吧！", input_html: { class: "donate_message" } %>
        </div>
        <div class="flex flex-col justify-center flex-grow pt-5 pr-7 pl-7 pb-3">
          <%= f.button :submit, "贊助", class: "btn-primary w-full cursor-pointer" %>
        </div>
        <% end %>
      </div>
      <div>
        <footer class="flex text-xs font-light justify-center pb-2">
          <span class="pr-1">Powered</span>
          <span class="pr-1">by</span>
          <span class="text-titleblue">SoundBar</span>
        </footer>
      </div>
    </div>
  </div>
</div>

