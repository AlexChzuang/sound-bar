<header class="flex justify-between bg-indigo pb-10">
  <div class="flex m-6 justify-center md:justify-start">
    <%= link_to image_tag("logo_trans", size: "220x220"), "/#" %>
  </div>
  <div class="flex justify-center items-center relative">
    <span id="openMyFav" class="mx-10 text-white text-2xl md:text-xl font-bold hover:text-blue-300 cursor-pointer">
      <i class="far fa-star"></i> <span class="hidden md:inline-block">我的最愛</span>
    </span>
    <ul id="myFavList" class="absolute top-20 right-20 md:right-40 w-auto bg-indigo shadow-2xl text-gray-200 text-lg border rounded-lg border-gray-300 cursor-auto overflow-auto hidden">
    </ul>
    <form class="justify-center hover:border-blue-600 rounded-full flex my-auto mr-5">
      <button class="search-btn focus:outline-none w-10 bg-white rounded-l-full text-gray-500 border-none p-2 h-10 my-auto"><i class="fas fa-search"></i></button><input type="text" class="search-input focus:outline-none h-10 w-12 sm:w-40 md:w-44 bg-white rounded-r-full p-2 my-auto" placeholder="搜尋 Podcast">
    </form>
  </div>
</header>

