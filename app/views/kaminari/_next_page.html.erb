<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next py-2 mx-1 bg-white border border-gray-200 rounded <%= 'pl-3.5 pr-3 cursor-not-allowed text-gray-300 ' if current_page.last? %> <%= 'hover:text-blue-400 hover:border-blue-400' if not current_page.last? %>">
  <%= link_to_unless current_page.last?, '<i class="fas fa-angle-right"></i>'.html_safe, url, rel: 'next', remote: remote, class: "py-2 pl-3.5 pr-3" %>
</span>
